.mainnav
  color: #eee
  position: absolute
  z-index: 999
  top: 0
  left: 20px

  &.active 
    & .toggle
      left: $nav_width

    & .menu
      left: 0


  & .toggle
    color: #eee
    display: block
    font-size: 50px
    height: 65px
    position: fixed
    left: 0
    transition: right 0.5s
    padding: 0px 15px
    background-color: $nav_bg_color

  & .menu
    float: right
    position: fixed
    left: -($nav_width)
    height: 100%
    width: $nav_width
    background-color: #2a2a2a
    transition: right 0.5s

    & .site-title
      line-height: 65px
      height: 65px
      letter-spacing: 7px
      color: #fff 

    & .site-info
      height: 200px

.nav
  margin: 0
  padding: 0
  list-style: none
  background-color: #2a2a2a

  & ul
    padding: 0

  & li
    display: block
    margin: 0
    padding: 0

  & a
    display: block
    padding: 15px
    color: #eee
    text-decoration: none

    & i
      margin-right: 5px
    &:hover
      background-color: lighten(@background-color, 10%)

