<div class="paginator">
    <% if (page.prev){ %>
        <a href="<%- config.root %><%- page.prev_link %>" class="pure-button pure-button-primary"><i class="fa fa-chevron-circle-left"></i></a>
    <% } %>

    <% if (page.next){ %>
        <a href="<%- config.root %><%- page.next_link %>" class="pure-button pure-button-primary"><i class="fa fa-chevron-circle-right"></i></a>
    <% } %>
</div> 