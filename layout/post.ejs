<div class="pure-g">
    <div class="pure-u-1-5"></div>
    <div class="pure-u-3-5 content-body">
    <%- partial('_partial/navigation') %>
            <article>
                    <div class="pull-right">
                        <time>
                            <%- date(page.date) %>
                        </time>
                    </div>
                    <div class="page-header">
                        <h1><%- page.title %></h1>
                    </div><!-- page-header -->
                <div class="article-content">
                  <%- page.content %>
                  <footer  class="muted credit">
                    <div>Tag:<% page.tags.forEach(function(tag){ %>
                        <span class="label label-default">#<%- tag.name %></span>
                        <% }); %>
                    </div>
                  </footer>
            </article>
    </div>
    <div class="pure-u-1-5"></div>      
</div>